{
  "type": "module",
  "scripts": {
    "dev:server": "vite",
    "dev:css": "bun run build:css -- --watch",
    "dev": "npm-run-all --parallel dev:server dev:css",
    "build:css": "tailwindcss -i ./public/static/index.css -o ./public/static/_tailwind.css",
    "build": "bun run build:css && vite build",
    "preview": "bun run build && wrangler pages dev dist",
    "deploy": "bun run build && wrangler pages deploy dist"
  },
  "dependencies": {
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.39.3",
    "hono": "^3.12.12",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240129.0",
    "@hono/vite-cloudflare-pages": "^0.2.2",
    "@hono/vite-dev-server": "^0.5.0",
    "@originjs/vite-plugin-commonjs": "^1.0.3",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.34",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.12",
    "wrangler": "^3.25.0"
  }
}
